<view class='wrapper'>
  <image class='img' src='{{movies_detail.image}}'></image>
  <view class='info-card'>
    <view class='title'>{{movies_detail.title}}</view>
    <view class='description'>
      <view class='user-info'>
        <image src='{{movies_detail.image}}' class='avatar'></image>
        <view class='mark'>"</view>
      </view>
      <view class='user-comment'>
        <view class='username'>小黄蜂的影评</view>
        <view class='comment'>{{movies_detail.description}}</view>
      </view>
    </view>
    <view class='func-button'>
      <view class='button' data-type='view_comment' bindtap='viewOrAdd'>收藏影评</view>
      <view class='button' data-type='add_comment' bindtap='viewOrAdd'>写影评</view>
    </view>
  </view>
</view>