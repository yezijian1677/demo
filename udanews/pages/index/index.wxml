
<view class='navigator-wrapper'>

  <view class='navigator navigator1' data-pos='gn' bindtap='switchItem'>国内</view>
  <view class='navigator' data-pos='gj' bindtap='switchItem'>国际</view>
  <view class='navigator' data-pos='cj' bindtap='switchItem'>财经</view>
  <view class='navigator' data-pos='yl' bindtap='switchItem'>娱乐</view>
  <view class='navigator' data-pos='js' bindtap='switchItem'>军事</view>
  <view class='navigator' data-pos='ty' bindtap='switchItem'>体育</view>
  <view class='navigator' data-pos='other' bindtap='switchItem'>其他</view>

</view>


<!-- //首页图片导航 -->
<view class='navigator-img'>

<!-- //背景图 透明度0.1 -->
<view class='news-img-opc'style="background-image: url('{{ImageUrl}}')"></view>
<!-- //新闻图片 -->
<view class='news-img'>
  <image class='img' src='{{ImageUrl}}'></image>
</view>
<!-- //新闻标题等 -->
<view class='news-text'>
  <view class='title'>{{title}}</view>
  <view class='dateAndSource'>
    <view class='source'>{{source}}</view>
    <view class='date'>{{date1}}</view>
  </view>
</view>
 
</view>

<view class='navigator-small' wx:for='{{item}}' bindtap='showDetail' data-pos='{{item.id}}'>
  <!-- //小新闻的title -->
  <view class='item-text'>
    <view class='item-title'>{{item.title}}</view>
    <view class='twoTips'>
      <view class='item-source'>{{item.source}}</view>
      <view class='item-date'>{{item.date}}</view>
    </view>
  </view>

  <!-- //小新闻图片 -->
  <view class='item-img'>
    <image class='item-small-img' src='{{item.ImageUrl}}' mode='aspectFill' style='width:220rpx;height:126rpx;'></image>
  </view>
</view>